<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with Color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EAEAEAAB" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- Border with Color -->
    <item
        android:left="0.5px"
        android:top="0.5px"
        android:right="0.5px"
        android:bottom="0.5px">
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" />
            <stroke
                android:width="0.5px"
                android:color="#EAEAEAAB" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>