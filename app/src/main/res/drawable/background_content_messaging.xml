 <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#BE9BDF" />
            <corners android:radius="@dimen/_100sdp" />
        </shape>
    </item>

    <!-- Box shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="10dp" />
            <stroke
                android:color="#00000040"
                android:width="1dp" />
            <padding
                android:left="0dp"
                android:top="2dp"
                android:right="0dp"
                android:bottom="4dp" />
        </shape>
    </item>

</layer-list>