<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".getstarted"
        tools:layout_editor_absoluteX="-98dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:id="@+id/post_a_book_lendingPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F6F6FF"
                app:layout_constraintStart_toStartOf="parent"

                >

                <FrameLayout
                    android:id="@+id/header_post_a_book_lend_page"
                    android:layout_width="411dp"
                    android:layout_height="160dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    >

                    <ImageView
                        android:id="@+id/logo_post_a_book_lend_page"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="42dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/logo_lend_page">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="mode"
                        android:textColor="#A8A6A6"
                        android:layout_marginTop="29dp"
                        android:layout_marginLeft="226dp"
                        android:textSize="12sp"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/borrow_text_post_a_book_lend_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L E N D"
                        android:textColor="#45B0E5"
                        android:layout_marginTop="42dp"
                        android:layout_marginLeft="165dp"
                        android:textSize="20dp">

                    </TextView>

                    <Button
                        android:id="@+id/btnLendMode"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:background="@drawable/gradient_lend_page_button"
                        android:text="B O R R O W  M O D E "
                        android:layout_marginTop="75dp"
                        android:layout_marginLeft="138dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        >

                    </Button>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_swap_vert_24"
                        android:layout_marginTop="85dp"
                        android:layout_marginLeft="110dp"
                        >

                    </ImageView>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="160dp"
                    android:background="@drawable/gradient_rectangle_post_a_book_lend_page">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="What book are you looking for?"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:text="Fill out information below."
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            />

                        <View
                            android:layout_width="365dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="80dp"
                            android:background="@drawable/line_post_a_book_lend_page" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="100dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="BOOK TITLE"/>

                        <EditText
                            android:layout_width="365dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="38dp"
                            android:paddingStart="12dp"
                            style="@style/lineEditText"
                            android:textSize="14sp"
                            android:hint="Type the name of the book you need here..."
                            android:background="@drawable/rectangle1_post_a_book_borrow_page"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="AUTHOR"/>

                        <EditText
                            android:layout_width="365dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="128dp"
                            android:paddingStart="12dp"
                            style="@style/lineEditText"
                            android:textSize="14sp"
                            android:hint="Who wrote the book? Type here..."
                            android:background="@drawable/rectangle1_post_a_book_borrow_page"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="190dp"
                            android:layout_marginLeft="5dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="EDITION"/>

                        <EditText
                            android:layout_width="90dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="218dp"
                            android:paddingStart="12dp"
                            style="@style/lineEditText"
                            android:textSize="14sp"
                            android:hint="Type here"
                            android:background="@drawable/rectangle1_post_a_book_borrow_page"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="190dp"
                            android:layout_marginLeft="108dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="PUBLICATION YEAR"/>

                        <EditText
                            android:layout_width="130dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="218dp"
                            android:layout_marginLeft="105dp"
                            android:paddingStart="12dp"
                            style="@style/lineEditText"
                            android:textSize="14sp"
                            android:hint="DD/MM/YY"
                            android:background="@drawable/rectangle1_post_a_book_borrow_page"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="190dp"
                            android:layout_marginLeft="265dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="ISBN"/>

                        <EditText
                            android:layout_width="90dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="218dp"
                            android:layout_marginLeft="258dp"
                            android:paddingStart="12dp"
                            style="@style/lineEditText"
                            android:textSize="14sp"
                            android:hint="Type here"
                            android:background="@drawable/rectangle1_post_a_book_borrow_page"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EDIT IN SETTINGS*"
                            android:textStyle="bold"
                            android:layout_marginTop="340dp"
                            android:layout_marginLeft="25dp"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            />

                        <View
                            android:layout_width="365dp"
                            android:layout_height="65dp"
                            android:background="@drawable/rectangle2_post_a_book_borrow_page"
                            android:layout_marginTop="355dp"
                            android:layout_marginLeft="23dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADDRESS: insert address insert address insert"
                            android:layout_marginTop="365dp"
                            android:layout_marginLeft="35dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CONTACT INFORMATION: 09000000000"
                            android:layout_marginTop="390dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="35dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="430dp"
                            android:layout_marginLeft="28dp"
                            android:text="SAMPLE IMAGE"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="18sp"/>


                        <View
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:background="@drawable/rectangle1_post_a_book_borrow_page"
                            android:layout_marginTop="455dp"
                            android:layout_marginLeft="23dp"
                            />

                        <View
                            android:id="@+id/img_of_book"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/img_9"
                            android:layout_marginTop="500dp"
                            android:layout_marginLeft="70dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="430dp"
                            android:layout_marginLeft="240dp"
                            android:text="CAPTION"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="18sp"/>

                        <View
                            android:layout_width="205dp"
                            android:layout_height="140dp"
                            android:background="@drawable/rectangle1_post_a_book_borrow_page"
                            android:layout_marginTop="455dp"
                            android:layout_marginLeft="180dp"
                            />

                        <EditText
                            android:layout_width="205dp"
                            android:layout_height="137dp"
                            android:layout_marginTop="458dp"
                            android:layout_marginLeft="180dp"
                            android:hint="Type your caption here.."
                            android:textSize="14sp"
                            android:paddingStart="10dp"
                            style="@style/lineEditText"
                            android:gravity="top"
                            />

                        <Button
                            android:layout_width="130dp"
                            android:layout_height="52dp"
                            android:layout_marginTop="650dp"
                            android:layout_marginLeft="250dp"
                            android:background="@drawable/rectangle3_post_a_book_borrow_page"
                            android:text="post"
                            android:textSize="20sp"
                            android:textColor="@color/white"/>

                    </FrameLayout>



                </FrameLayout>

            </FrameLayout>


        </FrameLayout>





    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>