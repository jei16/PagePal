<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".getstarted"
        tools:layout_editor_absoluteX="-98dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/post_a_book_lendingPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F6F6FF"
                app:layout_constraintStart_toStartOf="parent"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header_post_a_book_lend_page"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/white"
                    android:paddingBottom="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    >

                    <ImageView
                        android:id="@+id/logo_post_a_book_lend_page"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="42dp"
                        android:layout_marginRight="260dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/logo_lend_page"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="mode"
                        android:textColor="#A8A6A6"
                        android:layout_marginTop="29dp"
                        android:layout_marginLeft="226dp"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/borrow_text_post_a_book_lend_page"
                        android:text="L E N D"
                        android:textColor="#45B0E5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="42dp"
                        android:textSize="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <Button
                        android:id="@+id/btnBorrowMode"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:background="@drawable/gradient_lend_page_button"
                        android:text="B O R R O W  M O D E "
                        android:layout_marginTop="75dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_swap_vert_24"
                        android:layout_marginTop="85dp"
                        android:layout_marginRight="170dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bookDetailsofLend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/header_post_a_book_lend_page"
                    android:background="@drawable/gradient_rectangle_post_a_book_lend_page">


                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:id="@+id/whatareuTextGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="What book are you looking for?"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fill out information below."
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            />

                        <View
                            android:layout_width="365dp"
                            android:layout_marginTop="12dp"
                            android:layout_height="1dp"
                            android:background="@drawable/line_post_a_book_lend_page" />


                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/whatareuTextGroup">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/bookdetailsGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="20dp">

                            <LinearLayout
                                android:id="@+id/bookttitleGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:text="BOOK TITLE"/>

                                <EditText
                                    android:id="@+id/booktitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:paddingStart="12dp"
                                    style="@style/lineEditText"
                                    android:textSize="14sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:hint="Type the name of the book you need here..."
                                    android:background="@drawable/rectangle1_post_a_book_borrow_page"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/authorTextGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/bookttitleGroup"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:text="AUTHOR"/>

                                <EditText
                                    android:id="@+id/author"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:paddingStart="12dp"
                                    style="@style/lineEditText"
                                    android:textSize="14sp"
                                    android:hint="Who wrote the book? Type here..."
                                    android:background="@drawable/rectangle1_post_a_book_borrow_page"/>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/editionGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/authorTextGroup"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:text="EDITION"/>

                                <EditText
                                    android:id="@+id/edition"
                                    android:layout_width="90dp"
                                    android:layout_height="48dp"
                                    android:paddingStart="12dp"
                                    style="@style/lineEditText"
                                    android:textSize="14sp"
                                    android:hint="Type here"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:background="@drawable/rectangle1_post_a_book_borrow_page"/>


                            </LinearLayout>



                            <LinearLayout
                                android:id="@+id/publicationGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/editionGroup"
                                app:layout_constraintTop_toBottomOf="@id/authorTextGroup"
                                android:layout_marginTop="12dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:textColor="@color/black"
                                    android:text="PUBLICATION YEAR"/>

                                <EditText
                                    android:id="@+id/pubyr"
                                    android:layout_width="130dp"
                                    android:layout_height="48dp"
                                    android:paddingStart="12dp"
                                    style="@style/lineEditText"
                                    android:textSize="14sp"
                                    android:hint="DD/MM/YY"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:background="@drawable/rectangle1_post_a_book_borrow_page"/>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/isbnGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/publicationGroup"
                                app:layout_constraintTop_toBottomOf="@id/authorTextGroup"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="12dp"
                                android:paddingEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="ISBN"/>

                                <EditText
                                    android:id="@+id/isbn"
                                    android:layout_width="90dp"
                                    android:layout_height="48dp"
                                    android:paddingStart="12dp"
                                    style="@style/lineEditText"
                                    android:textSize="14sp"
                                    android:hint="Type here"
                                    android:background="@drawable/rectangle1_post_a_book_borrow_page"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="12dp"
                                app:layout_constraintStart_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/isbnGroup">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_marginTop="12dp"
                                    android:layout_marginLeft="12dp"
                                    android:id="@+id/pictureofBook"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:contentDescription="Picture of Book"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/captionGroup"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="parent">

                                    <TextView
                                        android:id="@+id/textView10"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="12dp"
                                        android:text="SAMPLE IMAGE"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        app:layout_constraintStart_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <View
                                        android:id="@+id/imgappear"
                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:layout_marginTop="30dp"
                                        android:background="@drawable/rectangle1_post_a_book_borrow_page"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <View
                                        android:id="@+id/img_of_book"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:background="@drawable/img_9"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <LinearLayout
                                    android:layout_marginTop="12dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toEndOf="@id/pictureofBook"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:orientation="vertical"
                                    app:layout_constraintTop_toBottomOf="@id/isbnGroup"
                                    >

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:id="@+id/captionGroup"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="12dp"
                                        android:paddingBottom="20dp"
                                        android:layout_marginRight="12dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toEndOf="@id/parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="CAPTION"
                                            android:textColor="@color/white"
                                            android:textSize="18sp"
                                            android:textStyle="bold"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent" />


                                        <EditText
                                            android:id="@+id/caption"
                                            style="@style/lineEditText"
                                            android:layout_width="match_parent"
                                            android:layout_height="150dp"
                                            android:layout_marginTop="30dp"
                                            android:background="@drawable/rectangle1_post_a_book_borrow_page"
                                            android:gravity="top"
                                            android:hint="Type your caption here.."
                                            android:paddingStart="10dp"
                                            android:paddingEnd="10dp"
                                            android:textSize="14sp"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent" />



                                    </androidx.constraintlayout.widget.ConstraintLayout>


                                </LinearLayout>


                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toBottomOf="@+id/bookDetailsofLend">

                    <Button
                        android:id="@+id/postbooklend"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/rectangle3_post_a_book_borrow_page"
                        android:text="post"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>





    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>