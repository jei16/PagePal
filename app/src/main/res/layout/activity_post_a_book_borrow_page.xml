<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".getstarted"
        tools:layout_editor_absoluteX="-98dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#F6F6FF">

            <FrameLayout
                android:id="@+id/header_post_a_book_borrow_page"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/logo_post_a_book_borrow_page"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="42dp"
                    android:src="@drawable/logo_borrow_page"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="251dp"
                    android:layout_marginTop="29dp"
                    android:text="mode"
                    android:textColor="#A8A6A6"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/borrow_text_borrow_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="42dp"
                    android:text="B O R R O W"
                    android:textColor="#9E55E3"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/btnBorrow"
                    android:layout_width="135dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="138dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/gradient_rectangle"
                    android:text="L E N D  M O D E "
                    android:onClick="openLendScreen"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="85dp"
                    android:src="@drawable/baseline_swap_vert_24"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="175dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/header_post_a_book_borrow_page"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What book are you looking for?"
                    android:textColor="#7A6BBC"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Fill out information below."
                    android:textColor="#C0C0C4"
                    android:textSize="14sp"
                    />


                <View
                    android:layout_width="373dp"
                    android:layout_height="580dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/gradient_rectangle_post_a_book_borrow_page" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOOK TITLE"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_marginTop="60dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="138dp"/>

                <View
                    android:layout_width="330dp"
                    android:layout_height="48dp"
                    android:background="@drawable/rectangle1_post_a_book_borrow_page"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="23dp"
                    />


                <EditText
                    android:layout_width="330dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="23dp"
                    android:paddingStart="12dp"
                    style="@style/lineEditText"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:hint="Type the name of the book you need here..."/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUTHOR"
                    android:layout_marginTop="170dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="240dp"
                    android:layout_height="48dp"
                    android:background="@drawable/rectangle1_post_a_book_borrow_page"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="112dp"
                    />

                <EditText
                    android:layout_width="240dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="112dp"
                    android:textColor="@color/black"
                    android:hint="Who wrote the book? Type here..."
                    android:paddingStart="12dp"
                    android:textSize="14sp"
                    style="@style/lineEditText"/>

                <TextView
                    android:id="@+id/date_of_publication_text_PAB"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="DATE OF PUBLICATION"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="190dp"
                    android:layout_height="48dp"
                    android:background="@drawable/rectangle1_post_a_book_borrow_page"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="160dp"
                    />

                <EditText
                    android:layout_width="190dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="160dp"
                    android:textColor="@color/black"
                    android:paddingStart="12dp"
                    android:textSize="14sp"
                    android:inputType="date"
                    android:hint="DD/MM/YYYY"
                    style="@style/lineEditText"/>

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="ESTIMATED BORROW DURATION"
                    android:layout_marginTop="295dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="190dp"
                    android:layout_height="48dp"
                    android:background="@drawable/rectangle1_post_a_book_borrow_page"
                    android:layout_marginTop="280dp"
                    android:layout_marginLeft="160dp"
                    />

                <EditText
                    android:layout_width="190dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="280dp"
                    android:layout_marginLeft="160dp"
                    android:textColor="@color/black"
                    android:paddingStart="12dp"
                    android:textSize="14sp"
                    android:inputType="date"
                    android:hint="ex. 5 days"
                    style="@style/lineEditText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDIT IN SETTINGS*"
                    android:textStyle="bold"
                    android:layout_marginTop="340dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    />

                <View
                    android:layout_width="330dp"
                    android:layout_height="65dp"
                    android:background="@drawable/rectangle2_post_a_book_borrow_page"
                    android:layout_marginTop="355dp"
                    android:layout_marginLeft="23dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADDRESS: insert address insert address insert"
                    android:layout_marginTop="365dp"
                    android:layout_marginLeft="35dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTACT INFORMATION: 09000000000"
                    android:layout_marginTop="390dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="35dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="430dp"
                    android:layout_marginLeft="28dp"
                    android:text="SAMPLE IMAGE"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>


                <View
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/rectangle1_post_a_book_borrow_page"
                    android:layout_marginTop="455dp"
                    android:layout_marginLeft="23dp"
                    />

                <View
                    android:id="@+id/img_of_book"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/img_9"
                    android:layout_marginTop="500dp"
                    android:layout_marginLeft="70dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="430dp"
                    android:layout_marginLeft="225dp"
                    android:text="CAPTION"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

                <View
                    android:layout_width="170dp"
                    android:layout_height="140dp"
                    android:background="@drawable/rectangle1_post_a_book_borrow_page"
                    android:layout_marginTop="455dp"
                    android:layout_marginLeft="180dp"
                    />

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="137dp"
                    android:layout_marginTop="458dp"
                    android:layout_marginLeft="180dp"
                    android:hint="Type your caption here.."
                    android:textSize="14sp"
                    android:paddingStart="10dp"
                    style="@style/lineEditText"
                    android:gravity="top"
                    />
                
                <Button
                    android:layout_width="130dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="650dp"
                    android:layout_marginLeft="240dp"
                    android:background="@drawable/rectangle3_post_a_book_borrow_page"
                    android:text="post"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>



            </FrameLayout>


        </FrameLayout>






    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>