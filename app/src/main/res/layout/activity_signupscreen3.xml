<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".getstarted">

        <RelativeLayout
            android:id="@+id/circle_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="-54dp"
            android:layout_marginTop="-67dp"
            android:layout_marginEnd="-120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/circle_design">

            <View
                android:id="@+id/design_10"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/design_shape_signup" />

            <View
                android:id="@+id/design_9"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="375dp"
                android:layout_marginTop="117dp"
                android:background="@drawable/design_shape_signup" />

            <ImageView
                android:id="@+id/design_8"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="155dp"
                android:layout_marginTop="174dp"
                android:contentDescription="design_8"
                android:src="@drawable/design_shape_signup" />

            <View
                android:id="@+id/design_7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="93dp"
                android:layout_marginTop="240dp"
                android:background="@drawable/design_shape_signup" />

            <View
                android:id="@+id/design_6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="430dp"
                android:layout_marginTop="538dp"
                android:background="@drawable/design_shape_signup" />

            <View
                android:id="@+id/design_5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="655dp"
                android:background="@drawable/design_shape_signup" />

            <View
                android:id="@+id/design_4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="380dp"
                android:layout_marginTop="280dp"
                android:background="@drawable/design_shape_signup" />

            <View
                android:id="@+id/design_3"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_marginStart="400dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/design_shape_signup" />

            <View
                android:id="@+id/design_2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="647dp"
                android:background="@drawable/design_shape_signup" />

            <View
                android:id="@+id/design_1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="420dp"
                android:layout_marginTop="220dp"
                android:background="@drawable/design_shape_signup" />


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pagepal_group_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pagepal_group_signup">

        <TextView
            android:id="@+id/pagepal_text_signup"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="130dp"
            android:layout_centerHorizontal="true"
            android:text="PagePal"
            android:textColor="@color/design_color_signup_text"
            android:textSize="24.6sp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/pagepal_logo_signup"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="70dp"
            android:contentDescription="pagepal_logo_signup"
            android:src="@drawable/pagepal_logo_signup" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/username_txtBox_signup_group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="185dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/signup_group3">

        <EditText
            android:id="@+id/username_editText3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:hint="Email"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="text"
            style="@style/lineEditText"
            android:paddingStart="12dp" />

        <View   android:id="@+id/email_txtBox_signup3"
            android:background="@drawable/signup_textbox"
            android:alpha="0.15"
            android:layout_marginStart="0dp"
            android:layout_marginTop="70dp"
            android:layout_width="360dp"
            android:layout_height="60dp" />

        <View
            android:id="@+id/email_txtBox_signup"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="70dp"
            android:alpha="0.15"
            android:background="@drawable/signup_textbox" />
        <EditText
            android:id="@+id/email_editText3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:hint="Username"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="text"
            style="@style/lineEditText"
            android:paddingStart="12dp" />

        <View   android:id="@+id/emails_txtBox_signup3"
            android:background="@drawable/signup_textbox"
            android:alpha="0.15"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_width="360dp"
            android:layout_height="60dp" />

        <View
            android:id="@+id/emailss_txtBox_signup"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-dp"
            android:alpha="0.15"
            android:background="@drawable/signup_textbox" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_tbox_signup_group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_txtBox_signup_group3">


    <EditText
            android:id="@+id/password_editText3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:hint="Password"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="textPassword"
            style="@style/lineEditText"
            android:paddingStart="12dp"/>

        <View   android:id="@+id/password_textbox_signup3"
            android:background="@drawable/signup_textbox"
            android:alpha="0.15"
            android:layout_marginStart="0dp"
            android:layout_marginTop="9dp"
            android:layout_width="360dp"
            android:layout_height="60dp" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/confirmpassword_tbox_signup_group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_tbox_signup_group3">

        <EditText
            android:id="@+id/confirmpassword_editText3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:hint="Confirm Password"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="textPassword"
            style="@style/lineEditText"
            android:paddingStart="12dp"/>

        <View   android:id="@+id/confirmpassword_textbox_signup3"
            android:background="@drawable/signup_textbox"
            android:alpha="0.15"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_width="360dp"
            android:layout_height="60dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/signup_group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pagepal_group_signup"
        app:layout_constraintTop_toTopOf="@id/pagepal_group_signup">

        <TextView
            android:id="@+id/signup_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_button_group3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="@+id/pagepal_group_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/confirmpassword_tbox_signup_group3">

        <Button
            android:id="@+id/signup_button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/username_textbox"
            android:backgroundTint="@color/signup_button"
            android:text="CONTINUE"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="11sp"

            android:textStyle="bold" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>